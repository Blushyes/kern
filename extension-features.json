{
  "pages": {
    "background": {
      "name": "Background",
      "description": "Extension background service worker",
      "files": [
        "src/background/**/*"
      ],
      "manifestKeys": ["background"],
      "dependencies": []
    },
    "popup": {
      "name": "Popup",
      "description": "Browser action popup",
      "files": [
        "src/ui/action-popup/**/*"
      ],
      "manifestKeys": ["action"],
      "dependencies": []
    },
    "options": {
      "name": "Options",
      "description": "Extension options page",
      "files": [
        "src/ui/options-page/**/*"
      ],
      "manifestKeys": ["options_page"],
      "dependencies": []
    },
    "contentScript": {
      "name": "Content Script",
      "description": "Scripts injected into web pages",
      "files": [
        "src/content-script/**/*"
      ],
      "manifestKeys": ["content_scripts"],
      "dependencies": []
    },
    "devtoolsPanel": {
      "name": "Devtools Panel",
      "description": "Chrome devtools panel",
      "files": [
        "src/ui/devtools-panel/**/*",
        "src/devtools/**/*"
      ],
      "manifestKeys": ["devtools_page"],
      "dependencies": []
    },
    "sidePanel": {
      "name": "Side Panel",
      "description": "Browser side panel",
      "files": [
        "src/ui/side-panel/**/*"
      ],
      "manifestKeys": ["side_panel"],
      "dependencies": []
    }
  },
  "features": {
    "fileRouting": {
      "name": "File-based Routing",
      "description": "Automatic route generation based on file structure",
      "files": [],
      "dependencies": [
        {
          "name": "unplugin-vue-router",
          "dev": true
        }
      ],
      "codePatterns": [
        {
          "file": "src/ui/*/main.ts",
          "pattern": "import .* from '.*vue-router.*'",
          "action": "keep"
        }
      ]
    },
    "i18n": {
      "name": "i18n",
      "description": "Internationalization support",
      "files": [
        "src/locales/**/*"
      ],
      "dependencies": [
        {
          "name": "vue-i18n",
          "dev": false
        },
        {
          "name": "@intlify/unplugin-vue-i18n",
          "dev": true
        }
      ],
      "codePatterns": [
        {
          "file": "src/ui/*/main.ts",
          "pattern": "import .* from '.*vue-i18n.*'",
          "action": "keep"
        },
        {
          "file": "src/ui/*/main.ts",
          "pattern": "import .* from '@/locales'",
          "action": "keep"
        },
        {
          "file": "src/ui/*/main.ts",
          "pattern": "app.use\\(i18n\\)",
          "action": "keep"
        }
      ]
    },
    "themeSwitcher": {
      "name": "Theme Switcher",
      "description": "Light/dark theme switching functionality",
      "files": [
        "src/components/ThemeSwitch.vue"
      ],
      "dependencies": [],
      "codePatterns": []
    },
    "notivue": {
      "name": "Notivue Notifications",
      "description": "Toast notification system",
      "files": [],
      "dependencies": [
        {
          "name": "notivue",
          "dev": false
        }
      ],
      "codePatterns": [
        {
          "file": "src/ui/*/main.ts",
          "pattern": "import .* from 'notivue'",
          "action": "keep"
        },
        {
          "file": "src/ui/*/main.ts",
          "pattern": "app.use\\(Notivue\\)",
          "action": "keep"
        }
      ]
    },
    "pinia": {
      "name": "Pinia Store",
      "description": "State management with Pinia",
      "files": [
        "src/stores/**/*"
      ],
      "dependencies": [
        {
          "name": "pinia",
          "dev": false
        }
      ],
      "codePatterns": [
        {
          "file": "src/ui/*/main.ts",
          "pattern": "import .* from 'pinia'",
          "action": "keep"
        },
        {
          "file": "src/ui/*/main.ts",
          "pattern": "import .* from '@/stores'",
          "action": "keep"
        },
        {
          "file": "src/ui/*/main.ts",
          "pattern": "app.use\\(.*pinia.*\\)",
          "action": "keep"
        }
      ]
    }
  }
} 